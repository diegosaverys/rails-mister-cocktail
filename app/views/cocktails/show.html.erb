<div class="logo">

  <h1> Your great <%= @cocktail.name %></h1>

  <div class="list">
    <h3>Ingredient List:</h3>
    <ul>
      <% @doses.each do |dose| %>
      <li>  Ingredient : <%= dose.ingredient.name %> --- <%= dose.description %>
        <%= link_to dose_path(dose),
              method: :delete,
              data: { confirm: "Are you sure?" } do %>
              <i class="fas fa-trash-alt"></i>
              <% end %>
      </li>
      <% end %>
    </ul>
  </div>

  <div class="card_form">
    <h4>Add a new dose:</h4>
    <div class="col-xs-12 col-md-12">
    <%= simple_form_for [@cocktail, @dose] do |f| %>
      <%= f.input :description %>
      <%= f.association :ingredient %>
      <%= f.submit "Add a dose", class: "btn btn-primary" %>
    <% end %>
    </div>
  </div>

  <div class="btn btn-primary top_right">
      <%= link_to "Back to list", cocktails_path%>
  </div>

</div>
